doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body(style="background-color: lightblue; display: flex; justify-content: center; align-items: center; flex-direction: column;")
        block contenido
    h1 Agregar productos
    form(action="/productos" method="POST")
        input(type="text" name="title" placeholder="Product")
        input(type="text" name="thumbnail" placeholder="Thumbnail")
        input(type="number" name="price" placeholder="Price")
        hr
        input(type="submit" value="Cargar producto")
        button
            a(href="http://localhost:8080/productos" style="text-decoration:none; color: black") Ver productos
